---
import Project from "../../components/Project.astro";
---

<section class="projects-section" id="projects">
  <div class="container">
    <div class="section-header">
      <div class="section-badge">
        <span class="badge-text">Portfolio</span>
      </div>
      <h2 class="section-title">Featured Projects</h2>
      <p class="section-description">
        A showcase of my recent work and personal projects, demonstrating my
        skills in web development and software engineering.
      </p>
    </div>

    <div class="projects-grid">
      <Project
        title="World Padel Store"
        body="A comprehensive e-commerce platform designed specifically for padel equipment. Features include responsive design, shopping cart functionality, user authentication, product catalog with filtering, and secure checkout process."
        deploy=""
        repo="https://github.com/teijeiro7/WPS.git"
        image="/images/wps.png"
        technologies={["HTML5", "CSS3", "JavaScript", "PHP", "MySQL"]}
        featured={true}
      />
      <Project
        title="Monopoly Bank"
        body="Digital banking system for Monopoly board game featuring real-time transaction tracking, player management, property ownership tracking, and an intuitive interface for game management."
        deploy=""
        repo="https://github.com/teijeiro7/monopoly-bank"
        image="/images/monopolyBank.png"
        technologies={["Java", "JavaFX", "SQLite", "FXML"]}
      />
    </div>

    <div class="section-footer">
      <a
        href="https://github.com/teijeiro7"
        target="_blank"
        rel="noopener noreferrer"
        class="view-all-btn"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path
