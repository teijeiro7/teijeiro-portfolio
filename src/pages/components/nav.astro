<header class="navbar">
  <div class="nav-container">
    <a href="/" class="logo-link">
      <img src="/images/logo.svg" alt="Cristian Teijeiro" class="logo-image" />
      <span class="logo-text">Teijeiro</span>
    </a>

    <nav class="nav-menu">
      <a href="#projects" class="nav-link">Projects</a>
      <a href="#contact" class="nav-link">Contact</a>
    </nav>

    <div class="nav-actions">
      <button class="theme-toggle" id="theme-toggle">
        <svg
          class="sun-icon"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <circle cx="12" cy="12" r="5"></circle>
          <path
            d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"
          ></path>
        </svg>
        <svg
          class="moon-icon"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
        </svg>
      </button>
    </div>
  </div>
</header>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(0, 0, 0, 0.9); /* Cambio: fondo negro semi-transparente */
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border);
    transition: all 0.3s ease;
  }

  /* Modo claro - navbar blanco */
  :global(.light) .navbar {
    background: rgba(
      255,
      255,
      255,
      0.95
    ); /* Fondo blanco semi-transparente en modo claro */
    border-bottom: 1px solid var(--border);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-md);
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 70px;
  }

  .logo-link {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    text-decoration: none;
    color: var(--text-primary);
    font-weight: 700;
    font-size: 1.25rem;
    transition: color 0.3s ease;
  }

  .logo-link:hover {
    color: var(--accent); /* Cambio: usar rojo en lugar de accent-light */
  }

  .logo-image {
    width: 32px;
    height: 32px;
  }

  .nav-menu {
    display: flex;
    gap: var(--space-xl);
  }

  .nav-link {
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    position: relative;
    padding: var(--space-xs) 0;
  }

  .nav-link:hover {
    color: var(--accent); /* Cambio: usar rojo en lugar de text-primary */
  }

  .nav-link::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(
      --accent
    ); /* Cambio: usar rojo sólido en lugar de gradiente */
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .theme-toggle {
    background: transparent; /* Cambio: fondo transparente */
    border: 1px solid var(--border);
    color: var(--text-secondary);
    padding: var(--space-xs);
    border-radius: var(--radius-sm);
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
  }

  .theme-toggle:hover {
    background: var(--accent); /* Cambio: fondo rojo en hover */
    color: white; /* Cambio: texto blanco en hover */
    border-color: var(--accent);
    transform: translateY(-1px); /* Añadido: efecto de elevación */
  }

  .sun-icon {
    display: block;
  }

  .moon-icon {
    display: none;
  }

  /* Iconos del tema según el modo */
  :global(.dark) .sun-icon {
    display: none;
  }

  :global(.dark) .moon-icon {
    display: block;
  }

  :global(.light) .sun-icon {
    display: block;
  }

  :global(.light) .moon-icon {
    display: none;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .nav-container {
      padding: 0 var(--space-sm);
    }

    .nav-menu {
      gap: var(--space-md);
    }

    .logo-text {
      display: none;
    }

    .navbar {
      background: rgba(
        0,
        0,
        0,
        0.95
      ); /* Más opaco en móviles para mejor legibilidad */
    }

    :global(.light) .navbar {
      background: rgba(
        255,
        255,
        255,
        0.98
      ); /* Más opaco en móviles para mejor legibilidad */
    }
  }
</style>
